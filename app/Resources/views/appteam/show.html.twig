{% extends 'base.html.twig' %}

{% block body %}
    <h1>Appteam</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ appTeam.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ appTeam.name }}</td>
            </tr>
            <tr>
                <th>Facebook</th>
                <td>{{ appTeam.facebook }}</td>
            </tr>
            <tr>
                <th>Twitter</th>
                <td>{{ appTeam.twitter }}</td>
            </tr>
            <tr>
                <th>Linkedin</th>
                <td>{{ appTeam.linkedin }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('appteam_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('appteam_edit', { 'id': appTeam.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
